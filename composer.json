{
    "name": "ngopibareng/phprosemirror",
    "description": "Work with ProseMirror JSON in PHP",
    "keywords": [
        "prosemirror",
        "php"
    ],
    "homepage": "https://github.com/ngopibareng/phprosemirror",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Ngopibareng",
            "email": "ngopibarengdotid@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Phprosemirror\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phprosemirror\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    }
}
